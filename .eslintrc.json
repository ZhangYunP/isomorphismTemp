{
    "extends": "airbnb",
    "installedESLint": true,
    "plugins": [
        "react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
       "linebreak-style": [0, "windows"],
       "semi": "off",
       "no-undef": 2,
       "func-names": 0,
       "object-shorthand": 0,
       "comma-dangle":  [2, "never"],
       "prefer-template": 0,
       "consistent-return": 0,
       "block-scoped-var": 0,
       "no-underscore-dangle": ["error", { "allow": ["__initState__"] }],
       "import/extensions": [2, "never", {"jsx": "always"}],
       "class-methods-use-this": 0,
       "no-param-reassign": ["error", {"props": false}],
       "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
       "no-did-mount-set-state": 0,
       "react/forbid-prop-types": [2, { "forbid": ["array"] }],
       "no-unused-vars": 0,
       "global-require": 0
    }
}
